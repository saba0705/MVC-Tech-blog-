<div class="container">
        <form class="form" id="blog-form">
            <input type="hidden" name="blog-id" id="blog-id" value="{{id}}" />  
            <div class="form-group">
                <label for="blog-name">Blog Title:</label>
                <input class="form-input" type="text" id="blog-name" name="blog-name" value="{{title}}" required />
            </div>

            <div class="form-group">
                <label for="blog-desc">Description:</label>
                <textarea class="form-input" id="blog-desc" name="blog-desc" required>{{content}}</textarea>
            </div>
            <div class="form-group">
                <button class = "update" type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>

    <script src = "/js/edit.js"></script>